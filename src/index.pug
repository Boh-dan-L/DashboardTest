doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        .container
            .container__logo
            .popup
                .popup__title Sign up for a free trial
                .popup__buttons
                    button.popup__buttons--block.button__facebook Facebook
                    button.popup__buttons--block.button__google Google
                    button.popup__buttons--block.button__apple Apple
